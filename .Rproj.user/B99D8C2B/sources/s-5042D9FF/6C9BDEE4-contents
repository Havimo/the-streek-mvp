library(shiny)
source('param.R')

# Define UI for application that draws a histogram
ui <- fluidPage(

    # Application title
    titlePanel("The Streek"),

    # Sidebar with a slider input for number of bins 
    sidebarLayout(
        sidebarPanel(),
        # Show a plot of the generated distribution
        mainPanel(
            uiOutput("userImg", click = "MyImage")
        )
    )
)

# Define server logic required to draw a histogram
server <- function(input, output) {
    stoken <- httr::config(token = strava_oauth(app_name, app_client_id, app_secret, app_scope="activity:read_all", cache = T))
    #stoken <- httr::config(token = readRDS('.httr-oauth')[[1]])
    values <- reactiveValues(myinfo = get_athlete(stoken))
    # my_acts <- get_activity_list(stoken)
    
    output$userImg <- renderUI({
        image <- values$myinfo$profile
        print(image)
        tags$img(src=image, width = 136, height = 136)
    })
}

# Run the application 
shinyApp(ui = ui, server = server)
